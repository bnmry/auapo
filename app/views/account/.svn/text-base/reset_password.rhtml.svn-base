<% form_tag do -%>
	<fieldset>
		<legend>Reset your Eta Phi password</legend>
		<p class="summary">Pick a password that you can remember, but not one that others can guess.  Use numbers, letters and uppercase characters to make the password more difficult to guess.  Passwords are case-sensitive.</p>
		<p>
		<p><label for="login">Password</label>
		<%= password_field_tag :password %></p>

		<p><label for="password">Confirm Password</label>
		<%= password_field_tag :password_confirmation %>
		</p>

		<p><%= submit_tag 'Reset Your Password' %></p>
	</fieldset>
<% end -%>
